{
  "manifest_version": 2,
  "name": "calcuton",
  "description": "Browser extension that calculates on fly",
  "version": "0.1",
  "author": "g07cha",
  "homepage_url": "https://github.com/g07cha/calcuton",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/listener.js", "js/web-bindings.js"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
